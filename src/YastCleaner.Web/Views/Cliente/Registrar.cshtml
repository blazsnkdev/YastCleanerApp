@model YastCleaner.Web.ViewModels.InsertarClienteViewModel

@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-user-plus me-2"></i>Registrar Nuevo Cliente
                        </h3>
                        <a asp-action="Activos" asp-controller="Cliente" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver a Clientes
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Mensajes de Alertas -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> Por favor, corrija los errores en el formulario.
                    </div>

                    <form asp-action="Registrar" asp-controller="Cliente" method="post" id="registrarForm">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="section-header mb-4">
                                    <h5 class="text-success">
                                        <i class="fas fa-id-card me-2"></i>Información Personal
                                    </h5>
                                    <p class="text-muted small">Complete los datos personales del cliente</p>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold">Nombre *</label>
                                    <input asp-for="Nombre" class="form-control form-control-lg"
                                           placeholder="Ingrese el nombre del cliente" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ApellidoPaterno" class="form-label fw-bold">Apellido Paterno *</label>
                                    <input asp-for="ApellidoPaterno" class="form-control form-control-lg"
                                           placeholder="Ingrese el apellido paterno" />
                                    <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ApellidoMaterno" class="form-label fw-bold">Apellido Materno</label>
                                    <input asp-for="ApellidoMaterno" class="form-control form-control-lg"
                                           placeholder="Ingrese el apellido materno (opcional)" />
                                    <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Columna Derecha - Información de Contacto -->
                            <div class="col-md-6">
                                <div class="section-header mb-4">
                                    <h5 class="text-success">
                                        <i class="fas fa-address-book me-2"></i>Información de Contacto
                                    </h5>
                                    <p class="text-muted small">Datos de contacto del cliente</p>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="NumeroCelular" class="form-label fw-bold">Número de Celular *</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light">+51</span>
                                        <input asp-for="NumeroCelular" class="form-control"
                                               placeholder="9XXXXXXXX" maxlength="9" />
                                    </div>
                                    <span asp-validation-for="NumeroCelular" class="text-danger small"></span>
                                    <div class="form-text">Número peruano de 9 dígitos (comenzando con 9)</div>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">Correo Electrónico *</label>
                                    <input asp-for="Email" class="form-control form-control-lg"
                                           placeholder="cliente@ejemplo.com" type="email" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                    <div class="form-text">Ejemplo: nombre.apellido@dominio.com</div>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Direccion" class="form-label fw-bold">Dirección *</label>
                                    <textarea asp-for="Direccion" class="form-control" rows="3"
                                              placeholder="Ingrese la dirección completa del cliente"></textarea>
                                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                                    <div class="form-text">Dirección completa para envíos y contactos</div>
                                </div>
                            </div>
                        </div>

                        @* @{
                            bool hayPedido = ViewBag.HayPedido != null && (bool)ViewBag.HayPedido;
                        } *@

                        <!-- Botones de Acción -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Activos" asp-controller="Cliente" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-times me-2"></i>Cancelar
                                    </a>

                                    <div class="d-flex gap-2">
                                        <button type="reset" class="btn btn-outline-warning btn-lg">
                                            <i class="fas fa-broom me-2"></i>Limpiar
                                        </button>

                                        <button type="submit" name="accion" value="cliente" class="btn btn-success btn-lg px-4">
                                            <i class="fas fa-save me-2"></i>Registrar Cliente
                                        </button>
                                        <button type="submit" name="accion" value="pedido" class="btn btn-success btn-lg px-4">
                                            <i class="fas fa-shopping-cart me-2"></i>Realizar Pedido
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
