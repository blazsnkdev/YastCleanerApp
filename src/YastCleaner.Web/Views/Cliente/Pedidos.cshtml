@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.PedidoViewModel>

@{
    ViewData["Title"] = "Gestión de Pedidos";
    double totalMonto = Model.Items.Sum(p => p.MontoTotal);
    double totalAdelantado = Model.Items.Sum(p => p.MontoAdelantado);
    double totalFaltante = Model.Items.Sum(p => p.MontoFaltante);
}

@section Styles {
    <link rel="stylesheet" href="~/css/PedidosCliente.css" />
}

<div class="pedidos-container">
    <!-- Header de la página -->
    <div class="page-header">
        <h1 class="page-title">Gestión de Pedidos</h1>
    </div>

    <!-- Botón nuevo pedido -->
    <a asp-controller="Pedido" asp-action="Temporal" class="btn-agregar">
        <i class="fas fa-plus-circle"></i> Nuevo Pedido
    </a>

    @if (Model.Items.Any())
    {
        <!-- Controles de paginación superior -->
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de
                @Model.TotalRegistros registros
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    <a asp-action="Pedidos" asp-route-pagina="1" asp-route-tamanioPagina="10"
                       class="btn-tamanio @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                    <a asp-action="Pedidos" asp-route-pagina="1" asp-route-tamanioPagina="25"
                       class="btn-tamanio @(Model.TamanioPagina == 25 ? "active" : "")">25</a>
                    <a asp-action="Pedidos" asp-route-pagina="1" asp-route-tamanioPagina="50"
                       class="btn-tamanio @(Model.TamanioPagina == 50 ? "active" : "")">50</a>
                </div>
            </div>
        </div>

        <!-- Tabla de pedidos -->
        <div class="tabla-pedidos">
            <div class="tabla-header">
                <h3><i class="fas fa-shopping-cart me-2"></i>Lista de Pedidos</h3>
            </div>
            <div class="tabla-contenido">
                <table class="tabla-custom">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Fecha Entrega</th>
                            <th>Cliente</th>
                            <th>Trabajador</th>
                            <th>Adelanto</th>
                            <th>Faltante</th>
                            <th>Total</th>
                            <th>Método Pago</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.CodigoPedido</strong></td>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@item.Cliente.Nombre</td>
                                <td>@item.Trabajador.Nombre</td>
                                <td class="text-success fw-bold">S/ @item.MontoAdelantado.ToString("N2")</td>
                                <td class="text-warning fw-bold">S/ @item.MontoFaltante.ToString("N2")</td>
                                <td class="text-primary fw-bold">S/ @item.MontoTotal.ToString("N2")</td>
                                <td>@item.MetodoPago</td>
                                <td>
                                    @{
                                        var estadoBadgeClass = item.Estado switch
                                        {
                                            "Completado" => "badge-completado",
                                            "Pendiente" => "badge-pendiente",
                                            "Cancelado" => "badge-cancelado",
                                            _ => "badge-default"
                                        };
                                    }
                                    <span class="badge-estado @estadoBadgeClass">@item.Estado</span>
                                </td>
                                <td class="acciones-cell">
                                    <a asp-controller="Pedido" asp-action="DetallePedido" asp-route-pedidoId="@item.PedidoId"
                                       class="btn-accion btn-detalle">
                                        <i class="fas fa-eye"></i> Detalle
                                    </a>
                                    <a asp-controller="Pedido" asp-action="Entregar" asp-route-pedidoId="@item.PedidoId"
                                       class="btn-accion btn-entregar">
                                        <i class="fas fa-truck"></i> Entregar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginación inferior -->
        <nav aria-label="Paginación de pedidos">
            <ul class="pagination-custom">
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Pedidos" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Pedidos" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom" asp-action="Pedidos" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Pedidos" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Pedidos" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <!-- Estado vacío -->
        <div class="estado-vacio">
            <i class="fas fa-shopping-cart"></i>
            <h4>No hay pedidos registrados</h4>
            <p>No se encontraron pedidos en el sistema.</p>
            <a asp-controller="Pedido" asp-action="Temporal" class="btn-agregar">
                <i class="fas fa-plus-circle"></i> Crear Primer Pedido
            </a>
        </div>
    }
</div>