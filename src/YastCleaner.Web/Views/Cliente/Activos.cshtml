@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.ClienteViewModel>

@{
    ViewData["Title"] = "Activos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Activos.css" />
}
<div class="clientes-container">
    <!-- Header de la página -->
    <div class="page-header">
        <h1 class="page-title">Clientes Activos</h1>
    </div>

    <!-- Botón agregar -->
    <a asp-action="Registrar" class="btn-agregar">
        <i class="fas fa-plus-circle"></i> Agregar Nuevo Cliente
    </a>

    @if (Model.Items.Any())
    {
        <!-- Controles de paginación superior -->
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de
                @Model.TotalRegistros registros
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    <a asp-action="Activos" asp-route-pagina="1" asp-route-tamanioPagina="5"
                       class="btn-tamanio @(Model.TamanioPagina == 5 ? "active" : "")">5</a>
                    <a asp-action="Activos" asp-route-pagina="1" asp-route-tamanioPagina="10"
                       class="btn-tamanio @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                    <a asp-action="Activos" asp-route-pagina="1" asp-route-tamanioPagina="25"
                       class="btn-tamanio @(Model.TamanioPagina == 25 ? "active" : "")">25</a>
                    <a asp-action="Activos" asp-route-pagina="1" asp-route-tamanioPagina="50"
                       class="btn-tamanio @(Model.TamanioPagina == 50 ? "active" : "")">50</a>
                </div>
            </div>
        </div>

        <!-- Tabla de clientes -->
        <div class="tabla-clientes">
            <div class="tabla-header">
                <h3><i class="fas fa-users me-2"></i>Lista de Clientes Activos</h3>
            </div>
            <div class="tabla-contenido">
                <table class="tabla-custom">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>Celular</th>
                            <th>Email</th>
                            <th>Estado</th>
                            <th>Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.Nombre</strong></td>
                                <td>@item.ApellidoPaterno</td>
                                <td>@item.ApellidoMaterno</td>
                                <td>@item.NumeroCelular</td>
                                <td>@item.Email</td>
                                <td>
                                    <span class="badge-estado badge-activo">@item.Estado</span>
                                </td>
                                <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                <td class="acciones-cell">
                                    <a asp-controller="Cliente" asp-action="Detalle" asp-route-clienteId="@item.ClienteId"
                                       class="btn-accion btn-detalle">
                                        <i class="fas fa-eye"></i> Detalle
                                    </a>
                                    <a asp-controller="Cliente" asp-action="Actualizar" asp-route-clienteId="@item.ClienteId"
                                       class="btn-accion btn-actualizar">
                                        <i class="fas fa-edit"></i> Actualizar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginación inferior -->
        <nav aria-label="Paginación de clientes">
            <ul class="pagination-custom">
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Activos" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Activos" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom" asp-action="Activos" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Activos" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Activos" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <!-- Estado vacío -->
        <div class="estado-vacio">
            <i class="fas fa-users"></i>
            <h4>No hay clientes activos</h4>
            <p>No se encontraron clientes activos en el sistema.</p>
            <a asp-action="Registrar" class="btn-agregar">
                <i class="fas fa-plus-circle"></i> Agregar Primer Cliente
            </a>
        </div>
    }
</div>