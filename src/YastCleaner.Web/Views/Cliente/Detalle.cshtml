@model YastCleaner.Web.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<h2>Detalle del Cliente</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h4>
        <p><strong>Celular:</strong> @Model.NumeroCelular</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Estado:</strong> @Model.Estado</p>
        <p><strong>Fecha Registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
    </div>
</div>

<h3>Pedidos</h3>

@if (Model.Pedidos != null && Model.Pedidos.Any())
{
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Fecha</th>
                <th>Monto Total</th>
                <th>Adelanto</th>
                <th>Faltante</th>
                <th>Método de Pago</th>
                <th>Estado</th>
                <th>Trabajador</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model.Pedidos)
            {
                <tr>
                    <td>@pedido.CodigoPedido</td>
                    <td>@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>S/. @pedido.MontoTotal</td>
                    <td>S/. @pedido.MontoAdelantado</td>
                    <td>S/. @pedido.MontoFaltante</td>
                    <td>@pedido.MetodoPago</td>
                    <td>@pedido.Estado</td>
                    <td>@pedido.Trabajador.Nombre @pedido.Trabajador.Apellidos</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tiene pedidos registrados.</p>
}
