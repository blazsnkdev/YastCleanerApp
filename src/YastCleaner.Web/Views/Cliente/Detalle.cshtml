@model YastCleaner.Web.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<style>
    .form-control-plaintext {
        min-height: 2.5rem;
        padding: 0.375rem 0;
    }

    .border-bottom {
        border-color: #dee2e6 !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
    }
</style>
<div class="container-fluid">
    <!-- Header con navegación -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-action="Activos" asp-controller="Cliente" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Clientes
            </a>
        </div>
        <h2 class="text-primary mb-0">Detalle del Cliente</h2>
        <div>
            <a asp-action="Actualizar" asp-controller="Cliente" asp-route-clienteId="@Model.ClienteId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>

    <!-- Mensajes de TempData -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Información Principal del Cliente -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user"></i> Información del Cliente
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Nombre Completo</label>
                                <p class="form-control-plaintext border-bottom pb-2">@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Número de Celular</label>
                                <p class="form-control-plaintext border-bottom pb-2">
                                    <i class="fas fa-phone text-primary"></i> @Model.NumeroCelular
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Correo Electrónico</label>
                                <p class="form-control-plaintext border-bottom pb-2">
                                    <i class="fas fa-envelope text-primary"></i> @Model.Email
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Dirección</label>
                                <p class="form-control-plaintext border-bottom pb-2">
                                    <i class="fas fa-map-marker-alt text-primary"></i> @Model.Direccion
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Estado</label>
                                <p>
                                    <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary") fs-6">
                                        @Model.Estado
                                    </span>
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Fecha de Registro</label>
                                <p class="form-control-plaintext border-bottom pb-2">
                                    <i class="fas fa-calendar text-primary"></i> @Model.FechaRegistro.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel de Acciones -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <!-- Botón de Pedidos -->
                        <a asp-action="Pedidos" asp-controller="Cliente" asp-route-clienteId="@Model.ClienteId"
                           class="btn btn-warning btn-lg">
                            <i class="fas fa-shopping-cart"></i> Ver Pedidos
                        </a>

                        <!-- Botón de Desactivar/Activar -->
                        @if (Model.Estado == "Activo")
                        {
                            <form asp-action="Desactivar" asp-controller="Cliente" asp-route-clienteId="@Model.ClienteId" method="post" class="d-grid">
                                <button type="submit" class="btn btn-danger btn-lg"
                                        onclick="return confirm('¿Está seguro de desactivar este cliente?')">
                                    <i class="fas fa-user-slash"></i> Desactivar Cliente
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activar" asp-controller="Cliente" asp-route-clienteId="@Model.ClienteId" method="post" class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg"
                                        onclick="return confirm('¿Está seguro de activar este cliente?')">
                                    <i class="fas fa-user-check"></i> Activar Cliente
                                </button>
                            </form>
                        }

                        <!-- Botón de Contactar -->
                        <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                            <i class="fas fa-envelope"></i> Enviar Email
                        </a>

                        <!-- Botón de Llamar -->
                        <a href="tel:@Model.NumeroCelular" class="btn btn-outline-success">
                            <i class="fas fa-phone"></i> Llamar al Cliente
                        </a>
                    </div>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0"><i class="fas fa-info-circle"></i> Información Adicional</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <i class="fas fa-clock"></i> Cliente registrado hace
                        @((DateTime.Now - Model.FechaRegistro).Days) días
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
