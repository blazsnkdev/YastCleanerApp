@model YastCleaner.Web.ViewModels.DetalleAnularPedido

@{
    ViewData["Title"] = "Anular Pedido";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AnularPedido.css" />
}

<div class="anular-container">
    <div class="anular-card">
        <!-- Header de advertencia -->
        <div class="card-header-warning">
            <div class="warning-content">
                <i class="fas fa-exclamation-triangle me-3"></i>
                <div>
                    <h1 class="card-title">Anular Pedido</h1>
                    <p class="card-subtitle">Confirmar la anulación del pedido seleccionado</p>
                </div>
            </div>
            <div class="estado-anulacion">
                <span class="badge-estado badge-peligro">Anulación Pendiente</span>
            </div>
        </div>

        <div class="card-body-custom">
            <div class="anular-content">
                <!-- Información del Pedido -->
                <div class="pedido-info-section">
                    <div class="section-header">
                        <i class="fas fa-clipboard-list me-2"></i>
                        <h3>Información del Pedido a Anular</h3>
                    </div>

                    <div class="pedido-details-grid">
                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-barcode"></i>
                            </div>
                            <div class="detail-content">
                                <label>Código del Pedido</label>
                                <span class="detail-value">@Model.CodigoPedido</span>
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-receipt"></i>
                            </div>
                            <div class="detail-content">
                                <label>Monto Total</label>
                                <span class="detail-price">S/ @Model.MontoTotal.ToString("N2")</span>
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                            <div class="detail-content">
                                <label>Fecha de Entrega</label>
                                <span class="detail-value">@Model.FechaEntrega.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="detail-content">
                                <label>Cliente</label>
                                <span class="detail-value">@Model.NombreCliente</span>
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-hard-hat"></i>
                            </div>
                            <div class="detail-content">
                                <label>Trabajador Asignado</label>
                                <span class="detail-value">@Model.NombreTrabajador</span>
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-icon warning">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div class="detail-content">
                                <label>ID del Pedido</label>
                                <span class="detail-value">@Model.PedidoId</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Advertencia importante -->
                <div class="advertencia-section">
                    <div class="advertencia-header">
                        <i class="fas fa-radiation-alt me-2"></i>
                        <h4>¡Atención! Esta acción es irreversible</h4>
                    </div>
                    <div class="advertencia-body">
                        <div class="advertencia-item">
                            <i class="fas fa-ban text-danger"></i>
                            <span>El pedido será marcado como anulado en el sistema</span>
                        </div>
                        <div class="advertencia-item">
                            <i class="fas fa-history text-warning"></i>
                            <span>Se registrará el motivo de anulación para auditoría</span>
                        </div>
                        <div class="advertencia-item">
                            <i class="fas fa-exclamation-circle text-danger"></i>
                            <span>Esta acción no se puede deshacer</span>
                        </div>
                    </div>
                </div>

                <!-- Formulario de Anulación -->
                <form asp-action="AnularPedido" asp-controller="Pedido" method="post" class="anular-form" id="anularForm">
                    <input type="hidden" asp-for="PedidoId" id="pedidoId" name="pedidoId" value="@Model.PedidoId" />

                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-comment-dots me-2"></i>
                            <h3>Motivo de Anulación</h3>
                        </div>

                        <div class="form-group-custom">
                            <label class="form-label-custom">
                                <i class="fas fa-edit me-2"></i>
                                Describa el motivo de la anulación *
                            </label>
                            <div class="input-group-custom">
                                <textarea id="comentario"
                                          name="comentario"
                                          class="form-control-custom"
                                          rows="5"
                                          placeholder="Describa detalladamente el motivo por el cual se está anulando este pedido..."
                                          required
                                          maxlength="500"></textarea>
                                <i class="fas fa-sticky-note input-icon textarea-icon"></i>
                            </div>
                            <div class="form-hint">
                                <i class="fas fa-info-circle me-1"></i>
                                Este campo es obligatorio. Mínimo 20 caracteres.
                                <span id="charCount" class="char-count">0/500 caracteres</span>
                            </div>
                        </div>

                        <!-- Opciones de motivo rápido -->
                        <div class="motivos-rapidos">
                            <label class="motivos-label">Motivos comunes (opcional):</label>
                            <div class="motivos-grid">
                                <button type="button" class="btn-motivo" data-motivo="Cliente canceló el servicio">
                                    Cliente canceló
                                </button>
                                <button type="button" class="btn-motivo" data-motivo="Problemas de disponibilidad del trabajador">
                                    Sin disponibilidad
                                </button>
                                <button type="button" class="btn-motivo" data-motivo="Error en el pedido o duplicado">
                                    Error en pedido
                                </button>
                                <button type="button" class="btn-motivo" data-motivo="Problemas de logística o ubicación">
                                    Problemas logísticos
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Confirmación final -->
                    <div class="confirmacion-section">
                        <div class="confirmacion-check">
                            <input type="checkbox" id="confirmarAnulacion" class="confirm-checkbox" required>
                            <label for="confirmarAnulacion" class="confirm-label">
                                <i class="fas fa-check-circle me-2"></i>
                                Confirmo que he revisado la información y deseo proceder con la anulación de este pedido.
                            </label>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="acciones-section">
                        <a asp-action="Index" class="btn-cancelar">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver a la Lista
                        </a>

                        <div class="acciones-derecha">
                            <button type="button" class="btn-preview" onclick="mostrarResumenAnulacion()">
                                <i class="fas fa-eye me-2"></i>
                                Ver Resumen
                            </button>
                            <button type="submit" class="btn-anular" id="btnAnular" disabled>
                                <i class="fas fa-ban me-2"></i>
                                Confirmar Anulación
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal-confirmacion" id="modalConfirmacion">
    <div class="modal-content">
        <div class="modal-header">
            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
            <h3>Confirmar Anulación</h3>
            <button type="button" class="btn-cerrar" onclick="cerrarModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="resumen-anulacion">
                <h4>Resumen de la Anulación</h4>
                <div class="resumen-item">
                    <strong>Pedido:</strong> @Model.CodigoPedido
                </div>
                <div class="resumen-item">
                    <strong>Cliente:</strong> @Model.NombreCliente
                </div>
                <div class="resumen-item">
                    <strong>Monto:</strong> S/ @Model.MontoTotal.ToString("N2")
                </div>
                <div class="resumen-item">
                    <strong>Motivo:</strong>
                    <div id="motivoResumen" class="motivo-texto"></div>
                </div>
            </div>
            <div class="advertencia-final">
                <i class="fas fa-radiation-alt text-danger me-2"></i>
                <span>¿Está seguro que desea proceder con la anulación?</span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-modal-cancelar" onclick="cerrarModal()">
                <i class="fas fa-times me-2"></i>
                Cancelar
            </button>
            <button type="button" class="btn-modal-confirmar" onclick="confirmarAnulacion()">
                <i class="fas fa-check me-2"></i>
                Sí, Anular Pedido
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const comentario = document.getElementById('comentario');
            const confirmarCheck = document.getElementById('confirmarAnulacion');
            const btnAnular = document.getElementById('btnAnular');
            const charCount = document.getElementById('charCount');

            // Contador de caracteres
            function actualizarContador() {
                const count = comentario.value.length;
                charCount.textContent = `${count}/500 caracteres`;

                if (count < 20) {
                    charCount.classList.add('text-danger');
                    charCount.classList.remove('text-success');
                } else {
                    charCount.classList.remove('text-danger');
                    charCount.classList.add('text-success');
                }

                validarFormulario();
            }

            // Validación del formulario
            function validarFormulario() {
                const comentarioValido = comentario.value.length >= 20;
                const confirmacionValida = confirmarCheck.checked;

                btnAnular.disabled = !(comentarioValido && confirmacionValida);
            }

            // Event listeners
            comentario.addEventListener('input', actualizarContador);
            confirmarCheck.addEventListener('change', validarFormulario);

            // Botones de motivo rápido
            document.querySelectorAll('.btn-motivo').forEach(btn => {
                btn.addEventListener('click', function() {
                    const motivo = this.getAttribute('data-motivo');
                    comentario.value = motivo;
                    actualizarContador();
                });
            });

            // Validación inicial
            actualizarContador();
        });

        function mostrarResumenAnulacion() {
            const comentario = document.getElementById('comentario').value;
            if (comentario.length < 20) {
                mostrarError('El motivo debe tener al menos 20 caracteres.');
                return;
            }

            document.getElementById('motivoResumen').textContent = comentario;
            document.getElementById('modalConfirmacion').style.display = 'flex';
        }

        function cerrarModal() {
            document.getElementById('modalConfirmacion').style.display = 'none';
        }

        function confirmarAnulacion() {
            document.getElementById('anularForm').submit();
        }

        function mostrarError(mensaje) {
            // Implementar notificación de error similar a vistas anteriores
            const notification = document.createElement('div');
            notification.className = 'error-notification';
            notification.innerHTML = `
                <i class="fas fa-exclamation-circle me-2"></i>
                ${mensaje}
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 4000);
        }

        // Prevenir envío accidental
        document.getElementById('anularForm').addEventListener('submit', function(e) {
            const comentario = document.getElementById('comentario').value;
            if (comentario.length < 20) {
                e.preventDefault();
                mostrarError('El motivo de anulación debe tener al menos 20 caracteres.');
            }
        });
    </script>
}