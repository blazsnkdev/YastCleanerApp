@model IEnumerable<YastCleaner.Web.ViewModels.PedidosTemporalViewModel>

@{
    ViewData["Title"] = "Registrar Pedido";
    double totalPagar = ViewBag.Importe ?? 0;
    double montoAdelanto = ViewBag.MontoAdelanto ?? 0;
    double saldoPendiente = totalPagar - montoAdelanto;
}

<div class="container-fluid">
    <div class="row">
        <!-- Formulario de Registro -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Registrar Pedido</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Pedido" asp-action="RegistrarPedido" method="post" id="pedidoForm" data-total="@totalPagar">

                        <div class="form-group mb-3">
                            <label for="fecha" class="form-label fw-bold">Fecha y Hora</label>
                            <input type="datetime-local" id="fecha" name="fecha" class="form-control"
                                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                            <div class="form-text">Seleccione la fecha y hora del pedido</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="cliente" class="form-label fw-bold">Cliente</label>

                            <!-- Input visible para autocompletar (nombre del cliente) -->
                            <input type="text" id="cliente" class="form-control" autocomplete="off" />
                            <input type="hidden" id="clienteId" name="clienteId"/>
                            <div class="form-text">Elija el cliente para el pedido</div>
                        </div>


                        <div class="form-group mb-3">
                            <label for="metodoPago" class="form-label fw-bold">Método de Pago</label>
                            <select id="metodoPago" name="metodoPago" asp-items="@ViewBag.MetodosPago" class="form-select" required>
                                <option value="">Seleccione un método de pago</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="montoAdelanto" class="form-label fw-bold">Monto Adelantado</label>
                            <div class="input-group">
                                <span class="input-group-text">S/</span>
                                <input type="number" id="montoAdelanto" name="montoAdelanto"
                                       class="form-control" step="0.01" min="0" max="@totalPagar"
                                       value="@montoAdelanto" oninput="calcularSaldo()" />
                            </div>
                            <div class="form-text">Máximo permitido: S/ @totalPagar.ToString("N2")</div>
                        </div>

                        <!-- Resumen de Pago -->
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Resumen de Pago</h6>
                                <div class="d-flex justify-content-between">
                                    <span>Total Pedido:</span>
                                    <span class="fw-bold">S/ @totalPagar.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Monto Adelantado:</span>
                                    <span id="adelantoMostrado" class="fw-bold">S/ @montoAdelanto.ToString("N2")</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">Saldo Pendiente:</span>
                                    <span id="saldoPendiente" class="fw-bold text-success">S/ @saldoPendiente.ToString("N2")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Servicio" asp-action="Servicios" class="btn btn-warning me-md-2">
                                <i class="fas fa-plus-circle"></i> Agregar Servicio
                            </a>
                            <a asp-controller="Pedido" asp-action="Temporal" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-edit"></i> Modificar Carrito
                            </a>
                            <!-- Nuevo botón para redirigir al formulario de Registrar Cliente -->
                            <a asp-controller="Cliente" asp-action="Registrar" class="btn btn-outline-primary">
                                <i class="fas fa-user-plus"></i> Registrar Cliente
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check-circle"></i> Registrar Pedido
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <!-- Detalles del Carrito -->
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">Detalles del Carrito</h3>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Servicio</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unit.</th>
                                        <th>Importe</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.Cantidad</td>
                                            <td class="text-success">S/ @item.Precio.ToString("N2")</td>
                                            <td class="text-success fw-bold">S/ @item.Importe.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="alert alert-info">
                                    <h6 class="alert-heading">Total de Items: @Model.Count()</h6>
                                    <p class="mb-0">Cantidad total de servicios: @Model.Sum(x => x.Cantidad)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-success">Total a Pagar</h5>
                                        <h3 class="text-success fw-bold">S/ @totalPagar.ToString("N2")</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                            <h5>Carrito Vacío</h5>
                            <p>No hay servicios en el carrito.</p>
                            <a asp-controller="Servicio" asp-action="Servicios" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Servicios
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/RegistrarPedido.js"></script>
}