@model YastCleaner.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;//para que no me aparezaca el layout
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200;500;700;800&display=swap"rel="stylesheet" />
    <link rel="stylesheet"href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp"crossorigin="anonymous" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <main class="login-design">
        <div class="waves">
            <img src="~/img/loginperson.png" />
        </div>
        <div class="login">
            <div class="login-data">
                <img src="~/img/collab.png" />
                <h1>Inicio de Sesión</h1>
                <form asp-controller="Auth" asp-action="Login" method="post" class="login-form">
                    <div class="input-group">
                        <label class="input-fill">
                            <input asp-for="Email" type="email" name="email" id="email" required value="admin@example.com" />
                            <span class="input-label">Correo Electrónico</span>
                            <i class="fas fa-envelope"></i>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </label>
                    </div>
                    <div class="input-group">
                        <label class="input-fill">
                            <input asp-for="Password" type="password" name="password" id="password" required value="Admin123" />
                            <span class="input-label">Contraseña</span>
                            <i class="fas fa-lock"></i>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </label>
                    </div>
                    <button type="submit" class="btn-login">Entrar</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>