@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.ServicioViewModel>

@{
    ViewData["Title"] = "Servicios";
}

<h1>Servicios</h1>

<div class="d-flex justify-content-between mb-4">
    <div>
        <a asp-controller="Pedido" asp-action="Temporal" class="btn btn-primary">Nuevo Pedido</a>
        <a asp-controller="Pedido" asp-action="Buscar" class="btn btn-warning">Consultar Pedidos</a>
    </div>
</div>

@if (Model.Items.Any())
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="text-muted">
            Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) - @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de @Model.TotalRegistros servicios
        </div>
        <div>
            <span class="me-2">Servicios por página:</span>
            <div class="btn-group btn-group-sm">
                <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="5" class="btn btn-outline-primary @(Model.TamanioPagina == 5 ? "active" : "")">5</a>
                <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="10" class="btn btn-outline-primary @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="15" class="btn btn-outline-primary @(Model.TamanioPagina == 15 ? "active" : "")">15</a>
                <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="20" class="btn btn-outline-primary @(Model.TamanioPagina == 20 ? "active" : "")">20</a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Seleccionar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                            @Html.DisplayFor(modelItem => item.Estado)
                        </span>
                    </td>
                    <td>
                        <a asp-controller="Servicio" asp-action="Seleccionar" asp-route-servicioId="@item.ServicioId" class="btn btn-warning btn-sm">Seleccionar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Controles de paginación -->
    <nav aria-label="Paginación de servicios">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.TienePaginaAnterior ? "disabled" : "")">
                <a class="page-link" asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                    <span aria-hidden="true">&laquo;&laquo;</span>
                </a>
            </li>
            <li class="page-item @(!Model.TienePaginaAnterior ? "disabled" : "")">
                <a class="page-link" asp-action="Servicios" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @{
                int inicio = Math.Max(1, Model.PaginaIndice - 2);
                int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
            }

            @for (int i = inicio; i <= fin; i++)
            {
                <li class="page-item @(i == Model.PaginaIndice ? "active" : "")">
                    <a class="page-link" asp-action="Servicios" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                </li>
            }

            <li class="page-item @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                <a class="page-link" asp-action="Servicios" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li class="page-item @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                <a class="page-link" asp-action="Servicios" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                    <span aria-hidden="true">&raquo;&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No hay servicios disponibles en este momento.
    </div>
}