@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.ServicioViewModel>

@{
    ViewData["Title"] = "Servicios";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Servicios.css" />
}

<div class="servicios-container">
    <!-- Header de la página -->
    <div class="page-header">
        <h1 class="page-title">Selecciona un Servicio</h1>
    </div>

    <!-- Controles superiores -->
    <div class="controles-superiores">
        <a asp-controller="Pedido" asp-action="Temporal" class="btn-carrito">
            <i class="fas fa-shopping-cart"></i> Carrito
        </a>

        @if (TempData["Error"] != null)
        {
            <div class="alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }
    </div>

    @if (Model.Items.Any())
    {
        <!-- Controles de paginación superior -->
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de
                @Model.TotalRegistros servicios
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Servicios por página:</span>
                <div>
                    <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="5"
                       class="btn-tamanio @(Model.TamanioPagina == 5 ? "active" : "")">5</a>
                    <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="10"
                       class="btn-tamanio @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                    <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="15"
                       class="btn-tamanio @(Model.TamanioPagina == 15 ? "active" : "")">15</a>
                    <a asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="20"
                       class="btn-tamanio @(Model.TamanioPagina == 20 ? "active" : "")">20</a>
                </div>
            </div>
        </div>

        <!-- Tabla de servicios -->
        <div class="tabla-servicios">
            <div class="tabla-header">
                <h3><i class="fas fa-concierge-bell me-2"></i>Lista de Servicios Disponibles</h3>
            </div>
            <div class="tabla-contenido">
                <table class="tabla-custom">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.Nombre</strong></td>
                                <td class="precio-servicio">S/ @item.Precio</td>
                                <td class="descripcion-servicio">@item.Descripcion</td>
                                <td>
                                    <span class="badge-estado @(item.Estado == "Activo" ? "badge-activo" : "badge-inactivo")">
                                        @item.Estado
                                    </span>
                                </td>
                                <td class="acciones-cell">
                                    <a asp-controller="Servicio" asp-action="Seleccionar" asp-route-servicioId="@item.ServicioId"
                                       class="btn-accion btn-seleccionar">
                                        <i class="fas fa-check-circle"></i> Seleccionar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginación inferior -->
        <nav aria-label="Paginación de servicios">
            <ul class="pagination-custom">
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Servicios" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Servicios" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom" asp-action="Servicios" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Servicios" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Servicios" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <!-- Estado vacío -->
        <div class="estado-vacio">
            <i class="fas fa-concierge-bell"></i>
            <h4>No hay servicios disponibles</h4>
            <p>No se encontraron servicios disponibles en el sistema.</p>
        </div>
    }
</div>