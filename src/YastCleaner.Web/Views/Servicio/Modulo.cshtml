@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.ServicioViewModel>

@{
    ViewData["Title"] = "Modulo";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Modulo.css" />
}

<div class="servicios-container">
    <!-- Header de la página -->
    <div class="page-header">
        <h1 class="page-title">Módulo de Servicios</h1>
    </div>

    <!-- Botones de acción superiores -->
    <div class="acciones-superiores">
        <a asp-action="RegistrarServicio" class="btn-principal">
            <i class="fas fa-plus-circle"></i> Crear Nuevo Servicio
        </a>
        <a asp-controller="Servicio" asp-action="Modulo" asp-route-estado="Inactivo" class="btn-secundario">
            <i class="fas fa-eye"></i> Ver Servicios Inactivos
        </a>
    </div>

    @if (Model.Items.Any())
    {
        <!-- Controles de paginación superior -->
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de
                @Model.TotalRegistros servicios
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    <a asp-action="Modulo" asp-route-pagina="1" asp-route-tamanioPagina="5"
                       class="btn-tamanio @(Model.TamanioPagina == 5 ? "active" : "")">5</a>
                    <a asp-action="Modulo" asp-route-pagina="1" asp-route-tamanioPagina="10"
                       class="btn-tamanio @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                    <a asp-action="Modulo" asp-route-pagina="1" asp-route-tamanioPagina="15"
                       class="btn-tamanio @(Model.TamanioPagina == 15 ? "active" : "")">15</a>
                    <a asp-action="Modulo" asp-route-pagina="1" asp-route-tamanioPagina="20"
                       class="btn-tamanio @(Model.TamanioPagina == 20 ? "active" : "")">20</a>
                </div>
            </div>
        </div>

        <!-- Tabla de servicios -->
        <div class="tabla-servicios">
            <div class="tabla-header">
                <h3><i class="fas fa-concierge-bell me-2"></i>Lista de Servicios</h3>
            </div>
            <div class="tabla-contenido">
                <table class="tabla-custom">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Fecha de Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.Nombre</strong></td>
                                <td class="precio-servicio">S/. @item.Precio</td>
                                <td>
                                    <span class="descripcion-servicio" title="@item.Descripcion">
                                        @item.Descripcion
                                    </span>
                                </td>
                                <td>
                                    <span class="badge-estado badge-@(item.Estado.ToLower().Replace(" ", "-"))">
                                        @item.Estado
                                    </span>
                                </td>
                                <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                <td class="acciones-cell">
                                    <form asp-action="ManipularEstado" method="post" class="form-accion">
                                        <input type="hidden" name="servicioId" value="@item.ServicioId" />

                                        @if (item.Estado == "Disponible")
                                        {
                                            <button type="submit" class="btn-accion btn-desactivar"
                                                    onclick="return confirm('¿Seguro que desea desactivar este servicio?')"
                                                    title="Desactivar servicio">
                                                <i class="fas fa-pause"></i> Desactivar
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn-accion btn-activar"
                                                    onclick="return confirm('¿Seguro que desea activar este servicio?')"
                                                    title="Activar servicio">
                                                <i class="fas fa-play"></i> Activar
                                            </button>
                                        }
                                    </form>

                                    <a asp-action="Detalle" asp-route-servicioId="@item.ServicioId"
                                       class="btn-accion btn-detalle" title="Ver detalles del servicio">
                                        <i class="fas fa-search"></i> Ver Detalle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginación inferior -->
        <nav aria-label="Paginación de servicios">
            <ul class="pagination-custom">
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Modulo" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Modulo" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom" asp-action="Modulo" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Modulo" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom" asp-action="Modulo" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <!-- Estado vacío -->
        <div class="estado-vacio">
            <i class="fas fa-concierge-bell"></i>
            <h4>No hay servicios registrados</h4>
            <p>No se encontraron servicios en el sistema.</p>
            <a asp-action="RegistrarServicio" class="btn-principal">
                <i class="fas fa-plus-circle"></i> Crear Primer Servicio
            </a>
        </div>
    }
</div>