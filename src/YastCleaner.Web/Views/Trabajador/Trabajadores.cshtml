@model YastCleaner.Web.Utils.PaginaResult<YastCleaner.Web.ViewModels.TrabajadorViewModel>

@{
    ViewData["Title"] = "Trabajadores";
}

<h1>Trabajadores</h1>

<p>
    <a asp-action="Registrar" class="btn btn-success">Agregar Trabajador</a>
</p>

@if (Model.Items.Any())
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="text-muted">
            Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) - @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de @Model.TotalRegistros registros
        </div>
        <div>
            <span class="me-2">Registros por página:</span>
            <div class="btn-group btn-group-sm">
                <a asp-action="Trabajadores" asp-route-pagina="1" asp-route-tamanioPagina="5" class="btn btn-outline-primary @(Model.TamanioPagina == 5 ? "active" : "")">5</a>
                <a asp-action="Trabajadores" asp-route-pagina="1" asp-route-tamanioPagina="10" class="btn btn-outline-primary @(Model.TamanioPagina == 10 ? "active" : "")">10</a>
                <a asp-action="Trabajadores" asp-route-pagina="1" asp-route-tamanioPagina="25" class="btn btn-outline-primary @(Model.TamanioPagina == 25 ? "active" : "")">25</a>
                <a asp-action="Trabajadores" asp-route-pagina="1" asp-route-tamanioPagina="50" class="btn btn-outline-primary @(Model.TamanioPagina == 50 ? "active" : "")">50</a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellidos Completos</th>
                <th>Número Dni</th>
                <th>Dirección</th>
                <th>Correo Electrónico</th>
                <th>Fecha de Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>
                        <a asp-controller="Trabajador" asp-action="Actualizar" asp-route-id="@item.TrabajadorId" class="btn btn-warning btn-sm">Actualizar</a>
                        <a asp-controller="Trabajador" asp-action="Detalle" asp-route-id="@item.TrabajadorId" class="btn btn-info btn-sm">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Controles de paginación -->
    <nav aria-label="Paginación de trabajadores">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.TienePaginaAnterior ? "disabled" : "")">
                <a class="page-link" asp-action="Trabajadores" asp-route-pagina="1" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Primera">
                    <span aria-hidden="true">&laquo;&laquo;</span>
                </a>
            </li>
            <li class="page-item @(!Model.TienePaginaAnterior ? "disabled" : "")">
                <a class="page-link" asp-action="Trabajadores" asp-route-pagina="@(Model.PaginaIndice - 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Anterior">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @{
                int inicio = Math.Max(1, Model.PaginaIndice - 2);
                int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
            }

            @for (int i = inicio; i <= fin; i++)
            {
                <li class="page-item @(i == Model.PaginaIndice ? "active" : "")">
                    <a class="page-link" asp-action="Trabajadores" asp-route-pagina="@i" asp-route-tamanioPagina="@Model.TamanioPagina">@i</a>
                </li>
            }

            <li class="page-item @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                <a class="page-link" asp-action="Trabajadores" asp-route-pagina="@(Model.PaginaIndice + 1)" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Siguiente">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li class="page-item @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                <a class="page-link" asp-action="Trabajadores" asp-route-pagina="@Model.TotalPagias" asp-route-tamanioPagina="@Model.TamanioPagina" aria-label="Última">
                    <span aria-hidden="true">&raquo;&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No hay trabajadores registrados en este momento.
    </div>
}