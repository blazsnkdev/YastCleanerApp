@model YastCleaner.Web.ViewModels.RegistrarReporteViewModel

@{
    ViewData["Title"] = "Registrar";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 28rem; border-radius: 15px;">
        <div class="card-body text-center">
            <h2 class="card-title mb-3 text-primary">Registrar Reporte</h2>
            <h6 class="card-subtitle mb-4 text-muted">Cierre de caja del trabajador</h6>

            <form asp-controller="Reporte" asp-action="Registrar" method="post">
                <input asp-for="TrabajadorId" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="MontoTotal" class="form-label fw-bold"></label>
                    <input asp-for="MontoTotal" class="form-control text-center" readonly />
                    <span asp-validation-for="MontoTotal" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Registrar</button>
            </form>

            <div class="mt-4">
                <h5 class="text-muted">Pedidos: @ViewBag.Pedidos</h5>
            </div>
        </div>

        <div class="card-footer text-center bg-white border-0 mt-3">
            <a asp-action="CerrarCaja" class="btn btn-link">← Regresar</a>
        </div>
    </div>
</div>
