@model YastCleaner.Web.ViewModels.RegistrarReporteViewModel

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar</h1>

<h4>Reporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Reporte" asp-action="Registrar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrabajadorId" class="control-label"></label>
                <input asp-for="TrabajadorId" class="form-control" type="hidden"/>
                <span asp-validation-for="TrabajadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoTotal" class="control-label"></label>
                <input asp-for="MontoTotal" class="form-control" readonly/>
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CerrarCaja">Regresar</a>
</div>

